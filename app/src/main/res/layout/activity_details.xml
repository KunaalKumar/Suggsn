<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".details.MovieDetailsActivity">

    <!--<com.google.android.material.floatingactionbutton.FloatingActionButton-->
    <!--android:id="@+id/fab"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--app:layout_anchor="@id/appBarLayout"-->
    <!--android:layout_margin="8dp"-->
    <!--app:layout_anchorGravity="bottom|end"/>-->

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:elevation="0dp"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="325dp"
                app:title="Item Title"
                android:background="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="@android:color/white"
                app:statusBarScrim="@android:color/white"
                app:expandedTitleMargin="16dp"
                android:fitsSystemWindows="true">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/movie_backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:tint="#A6000000"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.75"
                    android:fitsSystemWindows="true"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccentDark"
                    android:paddingBottom="?actionBarSize"
                    android:layout_marginTop="150dp">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/item_tagline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item tagline"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/item_rating"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/item_rating"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="Item Rating"
                        android:padding="16dp"
                        android:textAlignment="center"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintStart_toEndOf="@id/item_tagline"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/item_poster"
                        android:layout_width="125dp"
                        android:layout_height="206dp"
                        android:layout_gravity="center"
                        android:transitionName="poster_transition"
                        app:layout_collapseParallaxMultiplier="0.1"
                        app:layout_collapseMode="parallax"
                        android:fitsSystemWindows="true"
                        android:layout_margin="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_height="?actionBarSize"
                    android:layout_gravity="top"
                    app:layout_collapseMode="pin"
                    android:fitsSystemWindows="true"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>