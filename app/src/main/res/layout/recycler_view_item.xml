<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="item"
                type="com.kunaalkumar.sugsn.util.ListItem" />

        <variable
                name="rotten_rating"
                type="String" />

        <variable
                name="rottenIc"
                type="android.graphics.drawable.Drawable" />

        <variable
                name="imdbIc"
                type="android.graphics.drawable.Drawable" />
    </data>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:outlineProvider="background"
            app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkGray"
                android:orientation="vertical"
                android:padding="16dp"
                app:paletteBackgroundSrc="@{item.poster}">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/item_image"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    app:imgSrc="@{item.poster}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="27:40"
                    app:layout_constraintEnd_toStartOf="@+id/guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_title"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@{item.title, default=item_title}"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="26sp"
                    app:autoSizeMaxTextSize="26sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toTopOf="@+id/item_year"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/item_year"
                    app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_year"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center|top"
                    android:text="@{item.year, default=item_year}"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:autoSizeMaxTextSize="16sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toTopOf="@+id/ratings_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline"
                    app:layout_constraintTop_toBottomOf="@+id/item_title" />

            <LinearLayout
                    android:id="@+id/ratings_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@id/item_image"
                    app:layout_constraintTop_toBottomOf="@+id/item_year">

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imdb_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:padding="4dp"
                        android:src="@{imdbIc}"
                        app:layout_constraintBottom_toBottomOf="@+id/imdb_rating"
                        app:layout_constraintEnd_toStartOf="@+id/imdb_rating"
                        app:layout_constraintTop_toTopOf="@+id/imdb_rating"
                        tools:src="@drawable/ic_imdb" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/imdb_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="@{item.imdbRating, default=0.0}"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        app:autoSizeTextType="uniform" />

                <androidx.cardview.widget.CardView
                        android:id="@+id/rating_divider"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:backgroundTint="@android:color/white"
                        app:cardCornerRadius="4dp" />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/rotten_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:src="@{rottenIc}"
                        tools:src="@drawable/ic_rotten_fresh" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/rotten_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="@{item.rottenRating, default=00}"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        app:autoSizeTextType="uniform" />

            </LinearLayout>

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.40" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>