<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/rating_text"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="8.0"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/rating_image"
            app:layout_constraintStart_toStartOf="@+id/rating_image"
            app:layout_constraintTop_toBottomOf="@id/rating_image" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rating_image"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/ic_star_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/runtime_image"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/ic_timelapse_black_24dp"
            app:layout_constraintStart_toEndOf="@id/rating_image"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/runtime_text"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="109m"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@id/rating_text"
            app:layout_constraintTop_toBottomOf="@id/runtime_image" />

</androidx.constraintlayout.widget.ConstraintLayout>
